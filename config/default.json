                        "molecularFomula": { "type": "keyword" },
                        "molecularWeight": { 
                            "type": "scaled_float",
                            "scaling_factor": 1000
                        },
                        "no": { "type": "keyword" },
                        "chemical": { "type": "long", "index": false },
                        "salesRegion": { "type": "integer" },
                        "hasstock": { "type": "integer", "index": false },
                        "level": { "type": "integer", "index": false }
                    }
                }
            }
        }
    },
    "index_batch_size": 100,
    "//":{
