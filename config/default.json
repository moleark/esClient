        "multipleStatements": true
    },
    "database": {
        "product": "product$test", 
        "chemical": "chemical$test"
    },
    "esbaseurl": "",
    "indices" : {
        "products": {
            "index": "products",
            "body": {
                "settings": {
                },
                "mappings": {
                    "dynamic": false,
                    "properties": {
                        "id": { "type": "long" },
                        "brand": { 
                            "properties": {
                                "id": { "type": "integer" },
                                "name": { "type": "keyword" }
                            }
                        },
                        "origin": { "type": "keyword" },
                        "CAS": { "type": "keyword" },
                        "description": { "type": "wildcard" },
